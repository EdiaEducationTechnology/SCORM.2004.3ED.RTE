<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
	<extend>../project.xml</extend>
    <id>sakai-scorm-pack</id>
    <name>sakai-scorm-pack</name>
    <shortDescription>Sakai Scorm Component</shortDescription>

	<properties>
		<deploy.type>components</deploy.type>
	</properties>

    <dependencies>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-scorm-adl-impl</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-scorm-client-impl</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<!-- Sakai dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
    
    	<dependency>
			<groupId>ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.6.5</version>
			<properties>
                <war.bundle>true</war.bundle>
            </properties>
		</dependency>
    
    	<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.8.1</version>
			<properties>
                <war.bundle>true</war.bundle>
            </properties>
		</dependency>
	</dependencies>
	
</project>
