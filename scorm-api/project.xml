<?xml version="1.0" encoding="UTF-8"?>

<project>
	<pomVersion>3</pomVersion>
	<extend>../../master/project.xml</extend>
    <name>sakai-scorm-api</name>
    <id>sakai-scorm-api</id>
    <shortDescription>Sakai SCORM API</shortDescription>
	<groupId>sakaiproject</groupId>
	<currentVersion>${sakai.version}</currentVersion>
	<organization>
		<name>Sakai Project</name>
		<url>http://sakaiproject.org/</url>
	</organization>
	<inceptionYear>2007</inceptionYear>

	<properties>
    	<deploy.type>jar</deploy.type>
    	<deploy.target>shared</deploy.target>
  	</properties>

	<dependencies>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai</artifactId>
			<version>${sakai.plugin.version}</version>
			<type>plugin</type>
		</dependency>
			
		<!-- Sakai dependencies -->
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-component-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-content-util</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-tool-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-user-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util-api</artifactId>
			<version>${sakai.version}</version>
		</dependency>

	</dependencies>

	<build>
		<sourceDirectory>src/java</sourceDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src</directory>
				<includes>
					<include>**/*.properties</include>
					<include>**/*.xml</include>
				</includes>
			</resource>
		</resources>
	</build>

</project>
